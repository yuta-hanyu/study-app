{
  "compilerOptions": {
    "noImplicitAny": false,
    "noImplicitThis": false,
    "outDir": "./public/",
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "module": "es2020",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "target": "es2020",
    "lib": [
      "es2020",
      "dom",
    ],
    // "vuedraggable": "src/ts/vuedraggable"
  },
  "include": [
    "resources/ts/**/*",
    "resources/ts/**/*.vue",
    "resources/ts/**/*.tsx",
  ],
  "exclude": [
    "vendor"
  ],
}
